{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "webpack",
    "start": "npm run build && electron ./build/bundle.js",
    "pack-win": "electron-builder --win",
    "pack-mac": "electron-builder --mac",
    "pack-linux": "electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "markdown"
  ],
  "author": "wangxiaodong",
  "license": "MIT",
  "build": {
    "productName": "MdLite",
    "appId": "me.wangxiaodong.mdlite",
    "copyright": "MIT",
    "directories": {
      "output": "build"
    },
    "asar": true,
    "compression": "normal",
    "win": {
      "icon": "app/icons/Icon.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./app/icons/Icon.icns"
    },
    "linux": {
      "icon": "./app/icons/Icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./app/icons/mdLite.ico",
      "uninstallerIcon": "./app/icons/mdLite.ico",
      "installerHeaderIcon": "./app/icons/mdLite.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MdLite"
    }
  },
  "dependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^1.2.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.165",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  }
}
